{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "strict": true,
    "declaration": true,
    "removeComments": true,
    "pretty": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": false
  },
  "exclude": [
    "node_modules",
    "pkg"
  ]
}
